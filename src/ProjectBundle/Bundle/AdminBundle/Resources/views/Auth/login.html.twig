{% extends 'SimplySendAdminBundle::layout.html.twig' %}

{% block content %}
<div class="row">
    &nbsp;
</div>

{% if (error) %}
    <div class="flash-error">{{ error }}</div>
{% endif %}

<div class="row well span8" style="margin-left: 300px;">
    <legend>Administrative Login</legend>
    <form class="form-horizontal" method="POST">
        <div class="control-group">
            <label class="control-label" for="inputEmail">User Name</label>
            <div class="controls">
                <input type="text" id="inputEmail" name="username" id="username" placeholder="User Name" required="required">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputPassword">Password</label>
            <div class="controls">
                <input type="password" name="password" id="inputPassword" placeholder="Password" required="required">
            </div>
        </div>
        <div class="control-group">
            <div class="controls">

                <button type="submit" class="btn">Sign in</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}