<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>Project Name</title>

    {% stylesheets
    '../app/Resources/css/bootstrap.min.css'
    '../app/Resources/css/datepicker.css'
    '../app/Resources/css/admin.css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {% javascripts
    '../app/Resources/js/jquery-1.8.2.min.js'
    '../app/Resources/js/jquery.validate.min.js'
    '../app/Resources/js/underscore-min.js'
    '../app/Resources/js/bootstrap.min.js'
    '../app/Resources/js/bootstrap-datepicker.js'
    '../app/Resources/js/admin.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script type="text/javascript" src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body>

<div class="navbar navbar-inverse navbar-fixed-top">

    <div class="navbar-inner">

        <div class="container-fluid">

            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <a class="brand" href="#">Admin panel</a>

            <div class="nav-collapse collapse">

                {% if user is defined %}
                    <ul class="nav admin-nav">
                        <li><a href="/admin/logout">login</a></li>
                    </ul>

                    <p class="navbar-text pull-right">
                        Hello, {{ user.firstName }} {{ user.lastName }}
                    </p>
                {% endif %}


            </div>
            <!--/.nav-collapse -->

        </div>

    </div>

</div>
<br/>

<div class="clearfix"></div>

<div class="container-fluid">

    {% if app.session.hasFlash('notice') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            {{ app.session.flash('notice') }}
        </div>
    {% endif %}

    <div class="clearfix"></div>

    {% block content %}{% endblock %}

</div>

{% block closure %}{% endblock %}

</body>
</html>
